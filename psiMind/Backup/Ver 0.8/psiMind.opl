PROC DrawScreen:
	IF NOT redraw% :RETURN :ENDIF
	gUSE 1														REM Use default screen
	gUPDATE OFF
	gSETWIN 0, 0, MaxWidth%, fullscreenheight%
	gCLS
		
	UpdateToolBar:
	UpdateScreen:
	gUPDATE ON
ENDP
	
PROC UpdateScreen:
	LOCAL background%

	background% = gLOADBIT("z:\system\data\eikon.mbm", 0, 0)
	gUSE 1
	gAT 0, 0
	gPATT background%, gWidth, gHeight, 3
	gBOX gWIDTH, gHEIGHT
	gCLOSE background%
	
	gUSE 1
	
	IF fopen%
		DrawDB:
	ELSE
		rem No file open
	ENDIF
ENDP
	
PROC UpdateToolBar:
	LOCAL off%(6)
