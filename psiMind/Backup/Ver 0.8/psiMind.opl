	OPEN """" + fname$ + """ SELECT data FROM data WHERE id=0 AND type='ProgVer'", B, data$
	version$ = B.data$
	CLOSE
	
	USE A	:	LAST
	dINIT "File Information"
	dTEXT "Name:", fname$
	dTEXT "Records:", GEN$(COUNT, 10)
	dTEXT "Created by:", version$
	DIALOG
