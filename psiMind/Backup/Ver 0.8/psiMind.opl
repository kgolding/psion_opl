PROC CmdL%:											REM Attach File %l
	LOCAL n$(255), d%
	IF NotAllowed%:(%l) :RETURN :ENDIF
	
	Goto_id%:(mainitem&, -1)
	OPEN """" + fname$ + """ SELECT * FROM data WHERE id=" + GEN$(mainitem&, 10) + " AND type='FileLink'", B, id&, type$, data$
	IF Check%:(A.flags%, 1)
		REM Get existing link from option data table
		n$ = B.data$
	ENDIF
	CLOSE
	
	dINIT "Attach/link external file"
	dFILE n$, "File,Folder,Disk", 0
	IF Check%:(A.flags%,1)
		dBUTTONS "Link to item", 13, "Remove link", %r, "Cancel", -27
	ELSE
		dBUTTONS "Link to item", 13, "Cancel", -27
	ENDIF
	d% = DIALOG
	IF d% = %r
		REM Remove flag
		USE A
		MODIFY
		A.flags% = 0
		PUT
		UpdateScreen:
	ELSEIF d% = 13
		REM set flag
		USE A
		MODIFY
		A.flags% = 1
		PUT
		
		REM Add file name to option data table
		OPEN """" + fname$ + """ SELECT * FROM data WHERE id=" + GEN$(mainitem&, 10) + " AND type='FileLink'", B, id&, type$, data$
		USE B
		IF EOF
			INSERT
			B.id& = mainitem&
			B.type$ = "FileLink"
		ELSE
			MODIFY
		ENDIF
		B.data$ = n$
		PUT
		CLOSE

		UpdateScreen:
	ENDIF
ENDP

