	mCARD "View", "Zoom in", %m, "Zoom out", -%M, "Toolbar", %t OR tbMenuSym%
	mCARD "Record", "Add...", m%:(%a), "Edit...", m%:(%E), "Delete...", -m%:(%D), "Attach/link file...", m%:(%l)
	mCARD "Special", "Preferences...", %k, "Register...", %r, "About...", %A
