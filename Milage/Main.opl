PROC Zoom:(by%)								REM Zoom in/out
	LOCAL i&(48)
	
	zoomlevel% = zoomlevel% + by%
	IF zoomlevel% < 1
		zoomlevel% = 1
	ELSEIF zoomlevel% > Kzoommax%
		zoomlevel% = Kzoommax%
	ENDIF
	gFONT zoomfont&(zoomlevel%)
	gINFO32 i&()
	fontheight% = i&(3) + i&(4)		REM Set global total height off font
	fontdescent% = i&(4)					REM Set global descent off font
	DrawScreen:
ENDP
	
PROC CreateFile:(f$)						REM Create users data file
	LOCAL key&
	
	CloseFile:
	TRAP DELETE f$
	ONERR ErrCreateFile
	SETDOC f$
	
	REM Create file here
	CREATE """" + f$ + """ FIELDS vech,date,loc(80),miles TO LOG", A, vech%, date&, loc$,miles&
	
	CLOSE
	key& = DBNewKey&:
	DBAddField:(key&, "date", 0)
	DBCreateIndex:("logindex", key&, f$, "LOG")
	DBDeleteKey:(key&)
	
	CREATE """" + f$ + """ FIELDS vech,reg(20),notes(80) TO VECH", B, vech%, reg$, notes$
	CLOSE
	key& = DBNewKey&:
	DBAddField:(key&, "vech", 0)
	DBCreateIndex:("vechindex", key&, f$, "VECH")
	DBDeleteKey:(key&)

	CREATE """" + f$ + """ FIELDS vech,date,start,end,bus,private TO CLAIM", C, vech%, date&, start&, end&, bus&, private&
	CLOSE
	key& = DBNewKey&:
	DBAddField:(key&, "date", 0)
	DBCreateIndex:("logindex", key&, f$, "CLAIM")
	DBDeleteKey:(key&)
	
	ONERR OFF
	
	OpenFile:(f$)

	RETURN
ErrCreateFile::
	ONERR OFF
	ALERT("Error creating '"+ f$ + "'", ERR$(ERR) + " (" + GEN$(ERR, 5) + ")")
rem	SETDOC ""
	UpdateToolBar:
	UpdateScreen:
ENDP
	
PROC OpenFile:(f$)							REM Open users data file
	CloseFile:
	ONERR ErrOpenFile
	
	REM Open file here
	OPEN """" + f$ + """ SELECT * FROM LOG ORDER BY date", A, vech%, date&, loc$,miles&
	
	ONERR OFF
	SETDOC f$
	fopen% = KTrue%
	fname$ = f$
	SetTopRow:(1)
	UpdateToolBar:
	UpdateScreen:
	RETURN
ErrOpenFile::
	ONERR OFF
rem	IF ERR <> KErrInUse%
		ALERT("Error opening '"+ f$ + "'", ERR$(ERR) + " (" + GEN$(ERR, 5) + ")")
rem	ENDIF
	UpdateToolBar:
	UpdateScreen:
ENDP
	
