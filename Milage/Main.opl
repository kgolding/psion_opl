PROC DrawScreen:
	LOCAL background%
	IF NOT redraw% :RETURN :ENDIF
	gUSE 1														REM Use default screen
	gUPDATE OFF
	gSETWIN 0, 0, MaxWidth%, fullscreenheight%	
	gCLS
	
	background% = gLOADBIT("z:\system\data\eikon.mbm", 0, 0)
	gUSE 1
	gPATT background%, gWidth, gHeight, 3
	gBOX gWIDTH, gHEIGHT
	gCLOSE background%
	
	gFILL gWIDTH, fontheight%, 1
	gAT 0, fontheight%
	gLINEBY gWIDTH, 0
	
	gAT 10, fontheight% - fontdescent%
	gStyle 1
	gPRINT "Event driven application frame"
	
	gXBORDER 2, $01
		
	UpdateToolBar:
	UpdateScreen:
	gUPDATE ON
ENDP

PROC SetTopRow:(option%)
	LOCAL i%
	
	USE A
	IF option% = 1		REM Last record - END
		LAST		REM Go to last then backwards xxx
		i% = 1
		WHILE i% < numlistrows%
			IF POS > 1
				BACK
			ENDIF
			i% ++
		ENDWH
	ELSEIF option% = 2		REM First record - HOME
		FIRST
	ELSEIF option% = 3		REM Page up
	ELSEIF option% = 4		REM Page down
	ELSEIF option% = 5		REM Scroll up
		GOTOMARK bmtoprow%
		BACK
	ELSEIF option% = 6		REM Scroll down
		GOTOMARK bmtoprow%
		NEXT
	ENDIF
	IF bmtoprow% <> 0
		KILLMARK bmtoprow%
	ENDIF
	bmtoprow% = BOOKMARK
ENDP
	
PROC UpdateScreen:
	LOCAL x%, y%, w%, h%, col%(3), i%, gap%
	
	gUSE 1														REM Use default screen
	gSTYLE 0
	x% = 5
	y% = fontheight% + 10
	w% = gWIDTH - x% - 10
	h% = gHEIGHT - y% - 10
	numlistrows% = h% / fontheight%
	gap% = 10
	col%(1) = gTWIDTH("XXX 99/99/9999")
	col%(3) = gTWIDTH("9999")
	
	col%(2) = w% - col%(1) - col%(3) - (gap% * 4)
	
	gAT x% - 1, y% -1
	gBOX w% + 2, h% + 2
	gAT x%, y%
	gFILL w%, h%, 1

	IF fopen%
		USE A
		LAST
		gIPRINT "There are " + GEN$(COUNT, 5) + " records"

		IF bmtoprow% = 0
			SetTopRow:(1)
		ENDIF
		GOTOMARK bmtoprow%
		i% = 1
		DO
			gAT x% + gap%, y% - fontdescent% + (i% * fontheight%)
			IF NOT EOF
				gPRINTB ShortDateDay$:(A.date&), col%(1), 3
				gMOVE col%(1) + gap%, 0
				gPRINTB A.loc$, col%(2), 2
				gMOVE col%(2) + gap%, 0
				gPRINTB GEN$(A.miles&, 6), col%(3), 1
				NEXT
			ELSE
				gPRINTB "", w% - (gap% * 2), 1
			ENDIF
			i%++
		UNTIL gY > y% + h% - fontheight%
	ENDIF
ENDP
	
