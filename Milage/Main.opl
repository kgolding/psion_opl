PROC EditRecord:(addnew%)				REM User dialog to edit record
	LOCAL d%, vech%, date&, loc$(80), miles&
	LOCAL maxvech%

	IF addnew%
		USE A
		IF COUNT > 0
			LAST
			vech% = A.vech%
			date& = A.date& + 1
		ELSE
			date& = DAYS(DAY, MONTH, YEAR)
		ENDIF
	ELSE
		vech% = A.vech%
		date& = A.date&
		loc$ = A.loc$
		miles& = A.miles&
	ENDIF
	
	DoDialog::
	dINIT "Add/edit Log entry"
	dDATE date&, "Date", DAYS(1, 1, 2000), DAYS(DAY, MONTH, YEAR)
	dEDIT loc$, "Locations", 20
	dLONG miles&, "Miles travelled", 0, 9999
	
	OPEN """" + fname$ + """ SELECT vech,reg FROM VECH", V, vech%, reg$
	maxvech% = 0
	WHILE NOT EOF
		dCHOICE vech%, "Vehicle", V.reg$ + ",..."
		maxvech% = V.vech%
		NEXT
	ENDWH
	CLOSE
	dCHOICE vech%, "Vehicle", "Add new vehicle"
	
	dBUTTONS "Cancel", -27, "Save", 13
	d% = DIALOG
	IF d% = 13
		REM Error check user input
		IF loc$ = ""
			gIPRINT "What no locations!"
			GOTO DoDialog
		ELSEIF miles& = 0
			gIPRINT "What no milage!"
			GOTO DoDialog
		ENDIF

		IF vech% > maxvech%
			d% = EditVehicle%:(Ktrue%)
			IF d% > 0
				vech% = d%
			ELSE
				GOTO DoDialog
			ENDIF
		ENDIF

		USE A
		BEGINTRANS
		IF addnew%
			INSERT
		ELSE
			MODIFY
		ENDIF
		A.vech% = vech%
		A.date& = date&
		A.loc$ = loc$
		A.miles& = miles&		
		PUT
		COMMITTRANS
		UpdateScreen:
	ELSE
		CANCEL
	ENDIF
ENDP

PROC EditVehicle%:(addnew%)
	LOCAL d%, vech%, reg$(20), notes$(80)
	
	OPEN """" + fname$ + """ SELECT * FROM VECH", V, vech%, reg$, notes$
	IF addnew%
		IF NOT EOF
			LAST
			vech% = A.vech% + 1
		ELSE
			vech% = 1
		ENDIF
	ELSE
		vech% = V.vech%
		reg$ = V.reg$
		notes$ = V.notes$
	ENDIF
	
	dINIT "Add/Edit Vechicle"
	dEDIT reg$, "Reg number", 12
	dEDIT notes$, "Notes", 20
	dBUTTONS "Cancel", -27, "Save", 13
	
	d% = DIALOG
	IF d% = 13
		USE V
		IF addnew%
			INSERT
		ELSE
			MODIFY
		ENDIF
		V.vech% = vech%
		V.reg$ = reg$
		V.notes$ = notes$
		PUT
		CLOSE
		RETURN vech%
	ELSE
		CLOSE
		RETURN 0
	ENDIF
ENDP

PROC DoSetCmd:								REM Set up user commands
REM This is called at the start of the program, after each call to
REM a "Cmd" procedure, and whenever the data file changes
	cmdN$ = KcmdN$							REM Enable standard commands
	cmdS$ = KcmdS$
	IF fopen%										REM If file is open then allow
		cmdN$ = cmdN$ + "srp"			REM Save/Revert to saved/Print
		cmdS$ = cmdS$ + "cgupv"		REM Close/Save as/Page setup/Print setup/Print preview
		
		cmdN$ = cmdN$ + "a"				REM Add
		IF COUNT > 0							REM If there is at least one record then allow
			cmdS$ = cmdS$ + "de"		REM Edit, Delete
		ENDIF			
	ENDIF
ENDP
	
